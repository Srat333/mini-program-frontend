/* pages/testorder4/testorder4.wxss */
.all-layout {
  background: white;
  font-size: 35rpx;
}
.swiper {
  width: 100%;
  height: 100rpx;
  display: flex;
}
.swiper-tab {
  width: 90%;
  display: flex;
  align-self: center;
  justify-content: space-between;
}
.swiper-image {
  width: 10%;
  align-self: center;
}
.swiper-img {
  width: 40rpx;
  height: 40rpx;
  float: right;
}
.on {
  border-bottom:2px solid red;
  color: red;
}
.swiper-tab-list {
  /* margin: 0 30px; */
  padding: 25rpx 5rpx;
}
 
 
/*订单列表*/
.swiper-box {
  background: #efefef;
}
.orderDetails {
  background: white;
  border-top: 40rpx solid #efefef;
}
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #BEBEBE;
}
 
.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
}
 
.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #2f7b27;
  font-size: 34rpx;
}
 
.orderListDetails {
  display: flex;
  height: 240rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 
.orderListDetails .productImg {
  flex: 1;
  height:180rpx;
  width:120px;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
 
.orderListDetails .productImg image {
  width: 200rpx;
  height: 200rpx;
}
 
.orderListDetails .productInfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
  font-size:15px;
 
}
 
.orderListDetails .productInfo .productTitle {
  font-size:15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom:10px;
}
 
.productCount {
  margin-top: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
  font-size: .8rem;
}
 
.productCount>view {
  float: right;
  margin-right: 30rpx;
}
.payment-btn, .remind-btn {
  margin-top: 20rpx; 
  height: 30rpx;
  padding: 10rpx 20rpx;
  border: 1px solid red;
  border-radius: 25rpx;
  color: red;
  display: flex;
  align-items: center;
  justify-content: center;
}
