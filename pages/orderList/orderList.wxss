/* pages/orderList/orderList.wxss */
/*切换栏*/
.swiper-tab {
  height: 40px;
  line-height: 40px;
  background: #fff;
  color:#3B3B3B;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom:1px solid rgb(192, 192, 192);
}
 
.swiper-tab-list {
  margin: 0 20px;
  padding:0 4px;
  font-size: 15px;
}
 
.on {
  border-bottom:2px solid #b1b1b1;
  color: #868686	;
}
 
.navTopList {
  display: flex;
  width: 100%;
  height: 70rpx;
  background: #fff;
  border-bottom: 1rpx solid #b3b3b3	;
  margin-top:5px;
}
 
.navTopList .order-info {
  text-align: center;
}
 
.navTopList .order-info view {
  width: 56rpx;
  height: 56rpx;
  margin-left: 31rpx;
}
 
.navTopList .order-info text {
  font-size: 34rpx;
}
 
.navTopList .order-info text.active {
  color: #ff6662;
}
 
.navTopList .ywc,.navTopList .dfk,.navTopList .yqx {
  flex: 1;
}
 
 
/*订单列表*/
.orderDetails {
  background: #fff;
  border-bottom: 20rpx solid #f5f5f5;
  border-radius: 10rpx;
}
 
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 /* 时间 */
.orderListTitle .productTitle {
  padding-right: 50rpx;
  margin-left:10px;
  color: #a8a8a8;
  font-size: 26rpx;
}
 
.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #a8a8a8;
  font-size: 26rpx;
}
 
.orderListDetails {
  display: flex;
  height: 200rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 
.orderListDetails .productImg {
  flex: 1;
  height:180rpx;
  width:120px;
  margin-top: 20rpx;
  margin-left: 20rpx;
 
}
 
.orderListDetails .productImg image {
  width: 100px;
  height: 90%;
  border-radius: 10rpx;
}
 
.orderListDetails .productInfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
  font-size:15px;
 
}
 
.orderListDetails .productInfo .userName {
  font-size:15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom:10px;

}
.alreadyProd{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
}


.productCount {
  height: 160rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 
.money {
  float: right;
  margin-right: 30rpx;
}
.btn{
  clear: both;
  float: right;
  font-size: 26rpx;
  border-radius: 20rpx;
  font-weight: normal;
  border:1rpx solid #e7e7e7;
  background-color:  #fff;
}